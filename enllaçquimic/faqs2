        Material de rep√†s de Ci√®ncies Naturals - 2n ESO
    </footer>

    <script>
        let currentCard = 0;
        const cards = document.querySelectorAll('.flashcard');
        const totalCards = cards.length;
        const counterEl = document.getElementById('counter');
        const progressEl = document.getElementById('progressBar');
        const btnPrev = document.getElementById('btnPrev');
        const btnNext = document.getElementById('btnNext');

        function updateUI() {
            // Actualitzar comptador
            counterEl.innerText = `${currentCard + 1} / ${totalCards}`;
            
            // Actualitzar barra de progr√©s
            progressEl.style.width = `${((currentCard + 1) / totalCards) * 100}%`;

            // Actualitzar estats dels botons
            btnPrev.disabled = currentCard === 0;
            btnNext.disabled = currentCard === totalCards - 1;

            // Mostrar targeta correcta
            cards.forEach((card, index) => {
                if(index === currentCard) {
                    card.classList.add('active');
                } else {
                    card.classList.remove('active');
                    // Reset flip quan canviem de targeta
                    const inner = card.querySelector('.transform-style-3d');
                    inner.classList.remove('rotate-y-180');
                }
            });
        }

        function nextCard() {
            if (currentCard < totalCards - 1) {
                currentCard++;
                updateUI();
            }
        }

        function prevCard() {
            if (currentCard > 0) {
                currentCard--;
                updateUI();
            }
        }

        function flipCard(card) {
            const inner = card.querySelector('.transform-style-3d');
            inner.classList.toggle('rotate-y-180');
        }

        // Inicialitzar
        updateUI();

        // Control amb teclat (Fletxes)
        document.addEventListener('keydown', function(event) {
            if(event.key === "ArrowRight") {
                nextCard();
            } else if(event.key === "ArrowLeft") {
                prevCard();
            } else if (event.key === " " || event.key === "Enter") {
                // Girar targeta activa amb espai
                const activeCard = document.querySelector('.flashcard.active');
                if (activeCard) flipCard(activeCard);
            }
        });
    </script>
